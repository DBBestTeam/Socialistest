<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3>Cambiar la contraseña</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Estamos esperando la confirmación de: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :contraseña %> <i>(deja vacio si no la quieres cambiar)</i><br />
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :confirmación_de_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :contraeña_actual %> <i>(necesitamos esta contraseña para cambiarla)</i><br />
        <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit 'Actualizar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>